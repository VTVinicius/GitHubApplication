<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Font">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Font.Button" parent="Font">
        <item name="android:fontFamily">@font/nunito_extrabold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Font.Title" parent="Font">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Font.SubTitle" parent="Font">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CardFont">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Font.InputText">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/input_text</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Font.TitleCard" parent="Font">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Font.TextCard" parent="Font">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>